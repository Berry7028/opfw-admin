{{!-- The head and site navigation. --}}
<header>
  <div class="container navbar">
    <h2>Legacy Roleplay</h2>

    <div>
      {{!-- Show some stuff if the user currently is logged in. --}}
      {{#if session.isAuthenticated}}
        <a href="#" {{action "invalidateSession"}}>{{fa-icon "sign-out-alt"}} Logout</a>
      {{else}}
        <a href="/auth/login/steam">{{fa-icon "steam-symbol" prefix="fab"}} Login with steam</a>
      {{/if}}
    </div>
  </div>
</header>

{{!-- Main content container. --}}
<main>
  <div class="container">
    {{outlet}}
  </div>
</main>

{{!-- Footer --}}
<footer>
  <div class="container footer">
    <h5>
      Made with <span class="red">{{fa-icon "heart"}}</span> by ExpDev (Marius) - <a href="https://github.com/ExpDev07/legacy-rp-admin-v3">https://github.com/ExpDev07/legacy-rp-admin-v3</a>
    </h5>
  </div>
</footer>